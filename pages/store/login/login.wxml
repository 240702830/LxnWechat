<!--pages/login/login.wxml-->
<view class="container">

  <view class="page-body">
    <view class="page-section page-section-gap">
      <view class="page-section-ctn">
        <image class="loginimage" src="../../../image/pic/lxnlog2.jpg"></image>
      </view>
    </view>


    <view class="page-section">
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <input class="weui-input logintxt" maxlength="10" placeholder="账号" selection-start="-1" selection-end="-1" cursor="-1" bindblur="bindInputNameBlur"></input>
        </view>
      </view>
    </view>
    <view class="page-section">
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <input password class="weui-input logintxt" placeholder="密码" type="text"  bindblur="bindInputPassBlur"></input>
        </view>
      </view>
    </view>

    <view class="btn-area" id="buttonContainer">
      <button disabled="" bindtap="loginuser" type="warn">登录</button>
    </view>



  </view>
</view>